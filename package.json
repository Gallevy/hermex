{
  "name": "hermex",
  "version": "1.0.0",
  "description": "SWC-based AST parser for analyzing code and React component usage patterns across entire codebases",
  "homepage": "https://github.com/Gallevy/hermex",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gallevy/hermex.git"
  },
  "main": "./dist/cli.js",
  "bin": {
    "hermex": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "check": "biome check",
    "format": "biome format --write",
    "format:ci": "biome ci",
    "lint": "oxlint",
    "lint:ci": "oxlint",
    "test": "vitest",
    "test:ci": "vitest run",
    "build": "tsup",
    "build:ci": "tsup --clean",
    "dev:scan": "pnpm run build && node dist/cli.js scan \"fixtures/**/*.tsx\""
  },
  "keywords": [
    "hermex",
    "react",
    "ast",
    "parser",
    "swc",
    "component",
    "analysis",
    "usage",
    "patterns",
    "cli"
  ],
  "dependencies": {
    "@semantic-release/github": "^12.0.2",
    "@swc/core": "^1.3.107",
    "@swc/types": "^0.1.5",
    "@yarnpkg/lockfile": "^1.1.0",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "glob": "^13.0.0",
    "js-yaml": "^4.1.1",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^13.1.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@types/tmp": "^0.2.6",
    "oxlint": "^1.31.0",
    "semantic-release": "^25.0.2",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=24.11.1"
  },
  "author": "Gallevy",
  "license": "MIT"
}
