{
  "name": "Microfrontends Analysis",
  "description": "Example configuration for analyzing multiple microfrontend applications",
  "repositories": [
    "your-org/mfe-shell",
    "your-org/mfe-products",
    "your-org/mfe-checkout",
    "your-org/mfe-user-profile",
    "your-org/mfe-dashboard",
    "your-org/shared-components"
  ],
  "options": {
    "library": "@company/design-system",
    "branch": "main",
    "pattern": "src/**/*.{tsx,jsx,ts,js}",
    "depth": 1,
    "outputFormat": "both"
  },
  "analysis": {
    "complexity": true,
    "props": true,
    "patterns": [
      "direct-usage",
      "lazy-loading",
      "dynamic-imports",
      "object-mapping"
    ]
  },
  "reporting": {
    "outputFile": "microfrontends-analysis.json",
    "generateCharts": true,
    "compareAcrossRepos": true
  },
  "metadata": {
    "team": "Platform Engineering",
    "purpose": "Component usage analysis across microfrontends",
    "lastUpdated": "2024-01-15"
  }
}
